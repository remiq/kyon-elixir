<div class="list">
  <%= for item <- @items do %>
  <div class="item">
    <a href="<%= item_path(@conn, :view, item.id, "_")  %>">
      <img src="/items/thumb_<%= item.id %>.jpg" />
    </a>
  </div>
  <% end %>
</div>
<%= Placebooru.SharedView |> render "pager.html",
  page: @page, url: &(activity_path(@conn, :favs_all, &1)) %>